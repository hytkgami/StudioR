<% if @members %>
<div class="box">
<% if flash.notice %>
<p class="alert"><%= flash.notice %></p>
<% end %>
<table class="list">
  <tr>
    <th>ID</th>
    <th>名前</th>
    <th>電話番号</th>
    <th>Eメール</th>
    <th>管理者権限</th>
    <th>削除状態</th>
  </tr>
  <% @members.each do |member| %>
    <tr>
    <td align="right"><%= member.id %></td>
    <td><%= member.name %></td>
    <td><%= member.tel %></td>
    <td><%= member.email %></td>
    <% if member.administrator %>
    <td align="center">○</td>
    <% else %>
    <td align="center">-</td>
    <% end %>
    <% if member.deleted_at != nil %>
    <td align="center">○</td>
    <% else %>
    <td align="center">-</td>
    <% end %>
    <% unless member.deleted? %>
    <td class="hidden">
    <%= link_to "削除", [:admin, member], method: :delete, confirm: "本当に削除しますか?" %>
    </td>
    <% else %>
    <td class="hidden">
    <%= link_to "消去", [:admin, member], method: :delete, confirm: "本当に削除しますか?" %>
    </td>
    <% end %>
  </tr>
  <% end %>
</table>
</div>
<% else %>
<p>会員情報がありません。</p>
<% end %>


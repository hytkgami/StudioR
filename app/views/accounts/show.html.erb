<% @title = "マイアカウント" %>
<div class="lbody">
<div class="box">
<h3>基本情報</h3>
<table class="list">
  <tr>
    <th width="150">ID</th>
    <td><%= @member.id %></td>
  </tr>
  <tr>
    <th>名前</th>
    <td>
      <%= link_to @member do %><%= @member.name %><% end %>
    </td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @member.tel %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @member.email %></td>
  </tr>
</table>
<%= link_to :edit_account do %>
  <span class="link">基本情報の編集</span>
<% end %>
<%= link_to :account, method: :delete, confirm: "本当に退会しますか?" do %>
  <span class="link">退会する</span>
<% end %>
<% if @bookings %>
<h3>予約履歴</h3>
<table class="list">
  <tr>
    <th>申請日時</th>
    <th>予約日</th>
    <th>予約ID</th>
  </tr>
<% @bookings.each do |booking| %>
  <tr>
    <td><%= booking.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
    <td><%= booking.day %></td>
    <td><%= link_to booking.book_id, booking  %></td>
  </tr>
<% end %>
</table>
<% end %>
<span class="back"><%= link_to "戻る", :back %></span>
</div>
</div>
